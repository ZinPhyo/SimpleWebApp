@model SimpleWebApp.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<div class="d-flex justify-content-center mt-4">
    <div class="card shadow-sm" style="width: 600px;">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">
                <i class="bi bi-pencil-square"></i> Edit Product
            </h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post" class="row g-3">
                <input type="hidden" asp-for="Id" />

                <div class="col-12">
                    <label class="form-label fw-semibold">Product Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <label class="form-label fw-semibold">Price</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <div class="col-12 text-end mt-2">
                    <button class="btn btn-info text-white px-4">
                        <i class="bi bi-check-circle"></i> Update
                    </button>
                    <a class="btn btn-secondary ms-2 px-4" href="@Url.Action("Index")">Cancel</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
