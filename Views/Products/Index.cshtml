@model IEnumerable<SimpleWebApp.Models.Product>
@{
    ViewData["Title"] = "Products";
    int num = 1;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Products</h2>
    <a class="btn btn-success" href="@Url.Action("Create")">Add Product</a>
</div>

<table class="table table-bordered table-hover align-middle shadow-sm">
    <thead class="table-light">
        <tr class="text-center">
            <th style="width: 70px;">No</th>
            <th>Product</th>
            <th>Price</th>
            <th style="width: 180px;">CreatedDate</th>
            <th style="width: 150px;">Action</th>
        </tr>
    </thead>

    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="5" class="text-center py-3">No product found.</td></tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="text-center fw-bold">@num</td>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.CreatedDate.ToString("dd-MM-yyy")</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-primary me-2"
                           href="@Url.Action("Edit", new { id = item.Id })">
                            <i class="bi bi-pencil-square"></i> 
                        </a>

                        <a class="btn btn-sm btn-danger"
                           href="@Url.Action("Delete", new { id = item.Id })">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
                num++;
            }
        }
    </tbody>
</table>
