@model SimpleWebApp.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow-sm border-danger" style="width: 550px;">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">
                <i class="bi bi-exclamation-triangle"></i> Confirm Delete
            </h4>
        </div>

        <div class="card-body">

            <p class="fs-5">
                Are you sure you want to delete this product?
            </p>

            <ul class="list-group mb-3">
                <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
                <li class="list-group-item"><strong>Price:</strong> @Model.Price.ToString("C")</li>
            </ul>

            <form asp-action="DeleteConfirmed" method="post" class="text-end">
                <input type="hidden" asp-for="Id" />

                <button class="btn btn-danger px-4">
                    <i class="bi bi-trash"></i> Yes, Delete
                </button>

                <a class="btn btn-secondary ms-2 px-4" href="@Url.Action("Index")">Cancel</a>
            </form>

        </div>
    </div>
</div>
